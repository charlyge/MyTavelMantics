<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editx_dealTitle"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Las Vegas"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editx_dealPrice"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="15000"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editx_dealBody"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=" e.g Lasvegas Holiday Resort" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        >

    </LinearLayout>

    <!--<com.google.android.material.button.MaterialButton-->
        <!--android:id="@+id/upload_to_firebase"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:textStyle="bold"-->
        <!--android:text="Send Notification"-->
        <!--/>-->

    <Button
        android:id="@+id/btn_upload_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:text="Upload Image"
        />



    <ImageView
        android:id="@+id/upload_image_view"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:src="@mipmap/ic_launcher"
        />

</LinearLayout>